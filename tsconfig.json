{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "lib": [
      "es2020"
    ],
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": false,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
